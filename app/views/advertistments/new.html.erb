<h1>Add Advertistments</h1>
<%= form_for :advertistment, url: advertistments_path do |f| %>

    <p>
        <%= f.label :title %><br>
        <%= f.text_field(:title, {:class => 'form-control'})  %>
    </p>

    <p>
        <%= f.label :body %><br/>
        <%= f.text_area(:body,{:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.submit(:class => 'btn btn-primary') %>
    </p>

    <% end %>

